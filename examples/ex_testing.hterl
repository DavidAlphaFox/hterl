-module(ex_testing).
-compile(export_all).

integers_in_body() ->
    CapitalLetterA = $A,
    LessThanSign = $<,
    <p>
        65, % Unicode Character 'LATIN CAPITAL LETTER A' (U+0041)
        $A,
        CapitalLetterA,
        60, % Unicode Character 'LESS-THAN SIGN' (U+003C)
        $<,
        LessThanSign
    </p>.

strings_in_body() ->
    CapitalLetterA = "A",
    LessThanSign = "<",
    <p>
        "A",
        [65], % Runtime equivalent of "A"
        CapitalLetterA,
        "<",
        [60], % Runtime equivalent of "<"
        LessThanSign
    </p>.

pre_html_in_body() ->
    <p>
        {pre_html, <<0, 255>>},
        {pre_html, [0, 255]},
        {pre_html, "\000\377"} % 377 octal = 255 decimal
    </p>.
